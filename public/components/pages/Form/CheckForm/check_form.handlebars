{{#if form}}
    <div class="check-form">
        <h3 class="check-form__title" id="check-form-title">{{form.title}}</h3>
        <div class="check-form__description" id="check-form-description">
            <h3 class="check-form__description-title">Описание опроса</h3>
            <p class="check-form__description-text" id="check-form__description-text">{{form.description}}</p>
        </div>
        <div class="check-form__anonymous">
            {{#ifEquals form.anonymous true}}
                <p class="check-form__anonymous-warning">⚠️ &nbsp;Это анонимный опрос. Ваше имя  не будет видно автору опроса</p>
            {{/ifEquals}}
            {{#ifEquals form.anonymous false}}
                <p class="check-form__anonymous-error">⚠️ &nbsp;Прохождение этого опроса требует авторизации!</p>
            {{/ifEquals}}
        </div>
        <div class="check-form__questions-container" id="check-form__questions-container"></div>
        <div class="button-container">
            <button class="secondary-button" type="submit" id="update-submit-button">Редактировать</button>
            <button class="primary-button" type="submit" id="create-link-button">Создать публичную ссылку</button>
        </div>
    </div>
{{/if}}